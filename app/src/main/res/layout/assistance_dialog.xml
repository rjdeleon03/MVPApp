<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.Base.AssistanceData.Dialog.AssistanceDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/nd_assistance_dlg_cancel"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{() -> viewModel.navigateOnCancelButtonPressed()}"
                    android:background="@drawable/round_button_cancel"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_card"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_reg"
                    android:text="Assistance"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/nd_assistance_dlg_ok"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{() -> viewModel.navigateOnOkButtonPressed()}"
                    android:background="@drawable/round_button_ok"
                    android:src="@drawable/ic_check"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/nd_assistance_dlg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp">

                    <!-- Organization/Agency -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_org_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Organization/Agency"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/nd_assistance_dlg_org"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:text="@={viewModel.orgName}"
                        android:textSize="12sp"
                        android:fontFamily="@font/lato_reg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nd_assistance_dlg_org_label"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Type of Assistance Received -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Type of Assistance"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_org" />

                    <EditText
                        android:id="@+id/nd_assistance_dlg_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.assistanceType}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/nd_assistance_dlg_org"
                        app:layout_constraintStart_toStartOf="@+id/nd_assistance_dlg_org"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_org"  />

                    <!-- Date Received -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Date Received"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_type" />

                    <TextView
                        android:id="@+id/nd_assistance_dlg_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@{viewModel.dateReceived}"
                        app:layout_constraintEnd_toStartOf="@+id/nd_assistance_dlg_date_button"
                        app:layout_constraintStart_toStartOf="@+id/nd_assistance_dlg_org"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_type" />

                    <Button
                        android:id="@+id/nd_assistance_dlg_date_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="Set Date"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/nd_assistance_dlg_amount"
                        app:layout_constraintEnd_toEndOf="@+id/nd_assistance_dlg_type"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_type" />

                    <!-- Quantity/Amount -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Quantity/Amount"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_date" />

                    <EditText
                        android:id="@+id/nd_assistance_dlg_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.amount}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="@+id/nd_assistance_dlg_org"
                        app:layout_constraintStart_toStartOf="@+id/nd_assistance_dlg_org"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_date" />

                    <!-- Beneficiaries -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_beneficiaries_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="BENEFICIARIES"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_amount" />

                    <View
                        android:id="@+id/nd_assistance_dlg_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_beneficiaries_label" />

                    <!-- Men -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_men_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Men"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_assistance_dlg_men"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_divider" />

                    <EditText
                        android:id="@+id/nd_assistance_dlg_men"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.beneficiariesMen}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toStartOf="@+id/nd_assistance_dlg_women_label"
                        app:layout_constraintStart_toEndOf="@+id/nd_assistance_dlg_men_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_divider" />

                    <!-- Women -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_women_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Women"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_assistance_dlg_women"
                        app:layout_constraintStart_toEndOf="@+id/nd_assistance_dlg_men"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_divider" />

                    <EditText
                        android:id="@+id/nd_assistance_dlg_women"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.beneficiariesWomen}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nd_assistance_dlg_women_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_divider" />

                    <!-- Boys -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_boys_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Boys"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_assistance_dlg_men"
                        app:layout_constraintStart_toStartOf="@+id/nd_assistance_dlg_men_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_men" />

                    <EditText
                        android:id="@+id/nd_assistance_dlg_boys"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.beneficiariesBoys}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="@+id/nd_assistance_dlg_men"
                        app:layout_constraintStart_toStartOf="@+id/nd_assistance_dlg_men"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_men" />

                    <!-- Girls -->
                    <TextView
                        android:id="@+id/nd_assistance_dlg_girls_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Girls"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_assistance_dlg_women"
                        app:layout_constraintStart_toStartOf="@+id/nd_assistance_dlg_women_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_women" />

                    <EditText
                        android:id="@+id/nd_assistance_dlg_girls"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.beneficiariesGirls}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="@+id/nd_assistance_dlg_women"
                        app:layout_constraintStart_toStartOf="@+id/nd_assistance_dlg_women"
                        app:layout_constraintTop_toBottomOf="@+id/nd_assistance_dlg_women" />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
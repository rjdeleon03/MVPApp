<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.Base.AssistanceData.Row.AssistanceRowViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/nd_casualties_card"
        android:onClick="@{() -> viewModel.navigateOnCardSelected()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:onClick="@{() -> viewModel.navigateOnDeleteCardButtonPressed()}"
                    android:paddingHorizontal="8dp"
                    android:src="@drawable/ic_close_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/nd_casualties_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp">

                <!-- Organization/Agency -->
                <TextView
                    android:id="@+id/nd_assistance_row_org_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Organization/Agency"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nd_assistance_row_org"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.orgName}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nd_assistance_row_org_label"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Type of Assistance Received -->
                <TextView
                    android:id="@+id/nd_assistance_row_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Type of Assistance"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_org" />

                <TextView
                    android:id="@+id/nd_assistance_row_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.assistanceType}"
                    app:layout_constraintEnd_toEndOf="@+id/nd_assistance_row_org"
                    app:layout_constraintStart_toStartOf="@+id/nd_assistance_row_org"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_org" />

                <!-- Date Received -->
                <TextView
                    android:id="@+id/nd_assistance_row_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Date Received"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_type" />

                <TextView
                    android:id="@+id/nd_assistance_row_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.dateReceived}"
                    app:layout_constraintEnd_toEndOf="@+id/nd_assistance_row_type"
                    app:layout_constraintStart_toStartOf="@+id/nd_assistance_row_type"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_type" />

                <!-- Quantity/Amount -->
                <TextView
                    android:id="@+id/nd_assistance_row_amount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Quantity/Amount"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_date" />

                <TextView
                    android:id="@+id/nd_assistance_row_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.amount}"
                    app:layout_constraintEnd_toEndOf="@+id/nd_assistance_row_date"
                    app:layout_constraintStart_toStartOf="@+id/nd_assistance_row_date"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_date" />

                <!-- Beneficiaries -->
                <TextView
                    android:id="@+id/nd_assistance_row_beneficiaries_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="BENEFICIARIES"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_amount" />

                <View
                    android:id="@+id/nd_assistance_row_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_beneficiaries_label" />

                <!-- Men -->
                <TextView
                    android:id="@+id/nd_assistance_row_men_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Men"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_assistance_row_men"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_divider" />

                <TextView
                    android:id="@+id/nd_assistance_row_men"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.beneficiariesMen}"
                    app:layout_constraintEnd_toStartOf="@+id/nd_assistance_row_women_label"
                    app:layout_constraintStart_toEndOf="@+id/nd_assistance_row_men_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_divider" />

                <!-- Women -->
                <TextView
                    android:id="@+id/nd_assistance_row_women_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Women"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_assistance_row_women"
                    app:layout_constraintStart_toEndOf="@+id/nd_assistance_row_men"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_divider" />

                <TextView
                    android:id="@+id/nd_assistance_row_women"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.beneficiariesWomen}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nd_assistance_row_women_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_divider" />

                <!-- Boys -->
                <TextView
                    android:id="@+id/nd_assistance_row_boys_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Boys"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_assistance_row_men"
                    app:layout_constraintStart_toStartOf="@+id/nd_assistance_row_men_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_men" />

                <TextView
                    android:id="@+id/nd_assistance_row_boys"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.beneficiariesBoys}"
                    app:layout_constraintEnd_toEndOf="@+id/nd_assistance_row_men"
                    app:layout_constraintStart_toStartOf="@+id/nd_assistance_row_men"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_men" />

                <!-- Girls -->
                <TextView
                    android:id="@+id/nd_assistance_row_girls_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Girls"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_assistance_row_women"
                    app:layout_constraintStart_toStartOf="@+id/nd_assistance_row_women_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_women" />

                <TextView
                    android:id="@+id/nd_assistance_row_girls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:gravity="right"
                    android:text="@{viewModel.beneficiariesGirls}"
                    app:layout_constraintEnd_toEndOf="@+id/nd_assistance_row_women"
                    app:layout_constraintStart_toStartOf="@+id/nd_assistance_row_women"
                    app:layout_constraintTop_toBottomOf="@+id/nd_assistance_row_women" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
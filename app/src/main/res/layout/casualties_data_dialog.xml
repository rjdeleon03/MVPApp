<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.GeneralInformation.CasualtiesData.Dialog.CasualtiesDataDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="2,4"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="?dialogPreferredPadding"
                    android:layout_marginStart="?dialogPreferredPadding"
                    android:layout_marginRight="?dialogPreferredPadding"
                    android:layout_marginEnd="?dialogPreferredPadding">

                    <!-- Dead -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Dead"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.deadMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.deadFemale}"
                            android:textSize="14sp" />
                    </TableRow>

                    <!-- Missing -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Missing"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.missingMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.missingFemale}"
                            android:textSize="14sp" />
                    </TableRow>

                    <!-- Injured -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Injured"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.injuredMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.injuredFemale}"
                            android:textSize="14sp" />
                    </TableRow>

                </TableLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
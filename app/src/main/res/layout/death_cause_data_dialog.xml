                        app:layout_constraintTop_toBottomOf="@+id/nd_casualties_dlg_heart_attack_male" />

                    <ImageView
                        android:id="@+id/nd_casualties_dlg_electrocution_male_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="24dp"

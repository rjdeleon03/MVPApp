                        android:layout_height="30dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@+id/nd_casualties_dlg_heart_attack_label"

                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.dengueMale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_casualties_dlg_dengue_female_ic"
                        app:layout_constraintStart_toEndOf="@+id/nd_casualties_dlg_dengue_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_casualties_dlg_pneumonia_male" />

                    <ImageView
                        android:id="@+id/nd_casualties_dlg_dengue_female_ic"

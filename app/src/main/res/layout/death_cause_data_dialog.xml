                    <!-- Heart Attack -->
                    <TextView
                        android:id="@+id/nd_casualties_dlg_heart_attack_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Heart Attack"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_casualties_dlg_drowning_male" />

                    <ImageView
                        android:id="@+id/nd_casualties_dlg_heart_attack_male_ic"

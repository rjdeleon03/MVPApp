                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="@={viewModel.heartAttackFemale}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_heart_attack_male"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_drowning_female" />

                <!-- Electrocution -->
                <TextView
                    android:id="@+id/nd_death_cause_dlg_electrocution_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="ELECTROCUTION"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_heart_attack_male" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_electrocution_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="@={viewModel.electrocutionMale}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/nd_death_cause_dlg_electrocution_female"

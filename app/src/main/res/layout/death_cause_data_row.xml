<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.GeneralInformation.DeathCauseData.Row.DeathCauseDataRowViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/nd_death_cause_card"
        android:onClick="@{() -> viewModel.navigateOnCardSelected()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/nd_vulnerable_age_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:lines="2"
                    android:maxWidth="53dp"
                    android:text="@{viewModel.ageGroup.toString()}"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/nd_vulnerable_delete_button"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{() -> viewModel.navigateOnDeleteCardButtonPressed()}"
                    android:paddingHorizontal="8dp"
                    android:src="@drawable/ic_close_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_age_group" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/nd_death_cause_dlg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/nd_death_cause_dlg_measles_male_ic"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/nd_death_cause_dlg_measles_female_ic"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_electrocution_label"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_male" />

                <ImageView
                    android:id="@+id/nd_death_cause_dlg_measles_female_ic"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_measles_male_ic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_female" />

                <!-- Measles -->
                <TextView
                    android:id="@+id/nd_death_cause_dlg_measles_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="MEASLES"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_measles_male_ic" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_measles_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="@={viewModel.measlesMale}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/nd_death_cause_dlg_measles_female"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_electrocution_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_measles_male_ic" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_measles_female"

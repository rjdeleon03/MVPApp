                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/nd_death_cause_dlg_drowning_female"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_electrocution_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_dengue_male" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_drowning_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="@={viewModel.drowningFemale}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_drowning_male"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_dengue_female" />

                <!-- Heart Attack -->
                <TextView
                    android:id="@+id/nd_death_cause_dlg_heart_attack_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="HEART ATTACK"
                    android:lines="2"
                    android:maxWidth="100dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_drowning_male" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_heart_attack_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="@={viewModel.heartAttackMale}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/nd_death_cause_dlg_heart_attack_female"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_electrocution_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_drowning_male" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_heart_attack_female"

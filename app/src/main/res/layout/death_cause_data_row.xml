                    android:gravity="right"
                    android:inputType="number"
                    android:text="@={viewModel.diarrheaFemale}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_diarrhea_male"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_measles_female" />

                <!-- Pneumonia -->

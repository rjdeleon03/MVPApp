                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_measles_male" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_diarrhea_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="@={viewModel.diarrheaMale}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/nd_death_cause_dlg_diarrhea_female"
                    app:layout_constraintStart_toEndOf="@+id/nd_death_cause_dlg_electrocution_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_death_cause_dlg_measles_male" />

                <TextView
                    android:id="@+id/nd_death_cause_dlg_diarrhea_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.Evacuation.EvacuationPopulationData.Row.EvacuationPopulationRowViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="6dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/base_enum_type_horizontal"
                viewModel="@{viewModel}"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,3"
                android:layout_margin="16dp">

                <!-- Male/Female -->
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/lato_reg"
                        android:text="Male"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:text="@{viewModel.male}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Female"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.female}" />

                </TableRow>

                <!-- LGBT -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:fontFamily="@font/lato_reg"
                        android:text="LGBT"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_span="2"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.lgbt}"
                        android:textSize="12sp" />

                </TableRow>

                <!-- Pregnant Women -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:fontFamily="@font/lato_reg"
                        android:text="Pregnant Women"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_span="2"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.pregnant}"
                        android:textSize="12sp" />

                </TableRow>

                <!-- Lactating Mothers -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:fontFamily="@font/lato_reg"
                        android:text="Lactating Mothers"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_span="2"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.lactating}"
                        android:textSize="12sp" />

                </TableRow>

                <!-- Persons with Disabilities -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:fontFamily="@font/lato_reg"
                        android:text="Persons with Disabilities"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_span="2"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.disabled}"
                        android:textSize="12sp" />

                </TableRow>

                <!-- Sick -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:fontFamily="@font/lato_reg"
                        android:text="Sick"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_span="2"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.sick}"
                        android:textSize="12sp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Modules.NewDnca.GeneralInformation.FamilyData.FamilyDataFragment">

    <data>

        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.GeneralInformation.FamilyData.FamilyDataViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.GridLayout
                android:id="@+id/nd_family_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:layout_centerHorizontal="true"
                app:alignmentMode="alignBounds"
                app:rowCount="2"
                app:columnCount="1">

                <!-- Families -->
                <android.support.v7.widget.CardView
                    android:id="@+id/nd_family_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@color/blueGreen">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="Families"
                                android:textSize="18sp"
                                android:textColor="@color/backgroundColor"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <!-- Total -->
                            <TextView
                                android:id="@+id/nd_family_total_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:text="TOTAL"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/nd_family_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="4dp"
                                android:ems="10"
                                android:inputType="number"
                                android:text="@={viewModel.totalFamilies}"
                                android:textSize="15sp"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_family_displaced_label"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Affected -->
                            <TextView
                                android:id="@+id/nd_family_affected_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="24dp"
                                android:text="AFFECTED"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/nd_family_total_label" />

                            <EditText
                                android:id="@+id/nd_family_affected"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:inputType="number"
                                android:text="@={viewModel.affectedFamilies}"
                                android:textSize="15sp"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_family_displaced_label"
                                app:layout_constraintTop_toBottomOf="@+id/nd_family_total" />

                            <!-- Displaced -->
                            <TextView
                                android:id="@+id/nd_family_displaced_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="24dp"
                                android:text="DISPLACED"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/nd_family_affected_label" />

                            <EditText
                                android:id="@+id/nd_family_displaced"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:inputType="number"
                                android:text="@={viewModel.displacedFamilies}"
                                android:textSize="15sp"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.6"
                                app:layout_constraintStart_toEndOf="@+id/nd_family_displaced_label"
                                app:layout_constraintTop_toBottomOf="@+id/nd_family_affected" />


                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- Household -->
                <android.support.v7.widget.CardView
                    android:id="@+id/nd_household_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@color/blueGreen">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="Households"
                                android:textSize="18sp"
                                android:textColor="@color/backgroundColor"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <!-- Total -->
                            <TextView
                                android:id="@+id/nd_household_total_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:text="TOTAL"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/nd_household_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="4dp"
                                android:ems="10"
                                android:inputType="number"
                                android:text="@={viewModel.totalHouseholds}"
                                android:textSize="15sp"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_household_displaced_label"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Affected -->
                            <TextView
                                android:id="@+id/nd_household_affected_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="24dp"
                                android:text="AFFECTED"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/nd_household_total_label" />

                            <EditText
                                android:id="@+id/nd_household_affected"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:inputType="number"
                                android:text="@={viewModel.affectedHouseholds}"
                                android:textSize="15sp"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_household_displaced_label"
                                app:layout_constraintTop_toBottomOf="@+id/nd_household_total" />

                            <!-- Displaced -->
                            <TextView
                                android:id="@+id/nd_household_displaced_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="24dp"
                                android:text="DISPLACED"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/nd_household_affected_label" />

                            <EditText
                                android:id="@+id/nd_household_displaced"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:inputType="number"
                                android:text="@={viewModel.displacedHouseholds}"
                                android:textSize="15sp"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_household_displaced_label"
                                app:layout_constraintTop_toBottomOf="@+id/nd_household_affected" />

                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.GridLayout>

        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/nf_family_save_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_check"
            android:onClick="@{() -> viewModel.navigateOnSaveButtonPressed()}"
            app:backgroundTint="@android:color/holo_green_light"
            app:elevation="0dp"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>
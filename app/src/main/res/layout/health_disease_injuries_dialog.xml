                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@+id/nd_health_diseases_dlg_measles_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_diarrhea_male"

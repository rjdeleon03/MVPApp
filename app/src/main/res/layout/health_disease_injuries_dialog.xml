                    <!-- Hospitalization -->
                    <TextView
                        android:id="@+id/nd_health_diseases_dlg_hospitalization_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Hospitalization"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_checkup_male" />

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_hospitalization_male_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@+id/nd_health_diseases_dlg_measles_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_checkup_male"

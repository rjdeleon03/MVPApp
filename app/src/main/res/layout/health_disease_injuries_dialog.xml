                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_pneumonia_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.pneumoniaMale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_pneumonia_female_ic"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_pneumonia_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_diarrhea_male"/>

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_pneumonia_female_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_pneumonia_female"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_pneumonia_male"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_diarrhea_female"
                        app:srcCompat="@drawable/ic_female" />

                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_pneumonia_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.pneumoniaFemale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_pneumonia_female_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_diarrhea_female"/>
                    
                    <!-- Dengue -->
                    <TextView
                        android:id="@+id/nd_health_diseases_dlg_dengue_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Dengue"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_pneumonia_male" />

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_dengue_male_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@+id/nd_health_diseases_dlg_measles_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_pneumonia_male"
                        app:srcCompat="@drawable/ic_male"/>

                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_dengue_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.dengueMale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_dengue_female_ic"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_dengue_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_pneumonia_male"/>

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_dengue_female_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_dengue_female"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_dengue_male"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_pneumonia_female"
                        app:srcCompat="@drawable/ic_female" />

                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_dengue_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.dengueFemale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_dengue_female_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_pneumonia_female"/>

                    <!-- Others (Illnesses) -->
                    <TextView
                        android:id="@+id/nd_health_diseases_dlg_illness_other_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Others"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_dengue_male" />

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_illness_other_male_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@+id/nd_health_diseases_dlg_measles_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_dengue_male"
                        app:srcCompat="@drawable/ic_male"/>

                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_illness_other_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.drowningMale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_illness_other_female_ic"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_illness_other_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_dengue_male"/>

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_illness_other_female_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_illness_other_female"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_illness_other_male"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_dengue_female"
                        app:srcCompat="@drawable/ic_female" />

                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_illness_other_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.drowningFemale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_illness_other_female_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_dengue_female"/>

                    <!-- Medical Needs -->
                    <TextView
                        android:id="@+id/nd_health_diseases_dlg_medical_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:text="MEDICAL NEEDS"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_illness_other_male"/>

                    <!-- Check-up -->
                    <TextView
                        android:id="@+id/nd_health_diseases_dlg_checkup_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Check-up"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_medical_label"/>

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_checkup_male_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/nd_health_diseases_dlg_measles_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_medical_label"
                        app:srcCompat="@drawable/ic_male"/>

                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_checkup_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.heartAttackMale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_checkup_female_ic"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_checkup_male_ic"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_medical_label"/>

                    <ImageView
                        android:id="@+id/nd_health_diseases_dlg_checkup_female_ic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/nd_health_diseases_dlg_checkup_female"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_checkup_male"
                        app:layout_constraintTop_toBottomOf="@+id/nd_health_diseases_dlg_medical_label"
                        app:srcCompat="@drawable/ic_female" />

                    <EditText
                        android:id="@+id/nd_health_diseases_dlg_checkup_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.heartAttackFemale}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nd_health_diseases_dlg_checkup_female_ic"

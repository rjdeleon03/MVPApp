<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.Health.DiseasesInjuries.Dialog.DiseasesInjuriesDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="?dialogPreferredPadding"
                android:layout_marginStart="?dialogPreferredPadding"
                android:layout_marginRight="?dialogPreferredPadding"
                android:layout_marginEnd="?dialogPreferredPadding"
                android:stretchColumns="2,4">

                    <!-- Number of Cases -->
                    <TableRow>
                        <TextView
                            android:layout_span="5"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="NUMBER OF CASES OF ILLNESSES"
                            android:textColor="@android:color/black"/>
                    </TableRow>
                    <TableRow>
                        <View
                            android:layout_span="5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@android:color/darker_gray" />
                    </TableRow>

                    <!-- Measles -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Measles"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.measlesMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.measlesFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Diarrhea -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Diarrhea"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.diarrheaMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.diarrheaFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Pneumonia -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Pneumonia"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.pneumoniaMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.pneumoniaFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Dengue -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Dengue"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.dengueMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.dengueFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Others (Illness) -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Others"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.illOthersMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.illOthersFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Medical Needs -->
                    <TableRow>
                        <TextView
                            android:layout_span="5"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="MEDICAL NEEDS"
                            android:textColor="@android:color/black"/>
                    </TableRow>
                    <TableRow>
                        <View
                            android:layout_span="5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@android:color/darker_gray" />
                    </TableRow>

                    <!-- Check-up -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Check-up"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.checkUpMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.checkUpFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Hospitalization -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Hospitalization"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.hospitalizationMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.hospitalizationFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Medicines -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Medicines"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.medicinesMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.medicinesFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                    <!-- Others (Medical) -->
                    <TableRow
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Others"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_male"
                            android:layout_gravity="center_vertical" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.medOthersMale}"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.medOthersFemale}"
                            android:textSize="14sp" />

                    </TableRow>

                </TableLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.Health.Psychosocial.Dialog.PsychosocialDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="?dialogPreferredPadding"
                android:layout_marginStart="?dialogPreferredPadding"
                android:layout_marginRight="?dialogPreferredPadding"
                android:layout_marginEnd="?dialogPreferredPadding"
                android:stretchColumns="2,4" >

                <!-- Manifestations -->
                <TableRow>

                    <LinearLayout
                        android:layout_span="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Manifestations of Mental Stress / Trauma"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            android:text="(Blank stare, nightmares, sleep disorder, violent tendencies, etc.)"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:textSize="12sp"
                            android:text="@={viewModel.manifestations}"/>

                    </LinearLayout>

                </TableRow>

                <!-- Cases -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="No. of Cases"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_male" />

                    <EditText
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.casesMale}"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_female" />

                    <EditText
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.casesFemale}"
                        android:textSize="12sp" />

                </TableRow>

                <!-- Needs -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_span="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Needs"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            android:text="(Counselling, referrals, etc.)"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            android:text="@={viewModel.needs}"/>

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</layout>
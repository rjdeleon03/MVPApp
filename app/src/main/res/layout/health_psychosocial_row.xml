<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.Health.Psychosocial.Row.PsychosocialRowViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/nd_health_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/base_enum_type_horizontal"
                viewModel="@{viewModel}"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:stretchColumns="2,4">

                <!-- Manifestations -->
                <TableRow
                    android:layout_marginBottom="2dp">

                    <LinearLayout
                        android:layout_span="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Manifestations of Mental Stress / Trauma"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_reg"
                            android:text="@{viewModel.manifestations}"/>

                    </LinearLayout>

                </TableRow>

                <!-- Cases -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="No. of Cases"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_male" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.casesMale}" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_female" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@{viewModel.casesFemale}"
                        android:textSize="12sp" />

                </TableRow>

                <!-- Needs -->
                <TableRow
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_span="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_reg"
                            android:textColor="@android:color/black"
                            android:text="Needs"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_reg"
                            android:text="@{viewModel.needs}"/>

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
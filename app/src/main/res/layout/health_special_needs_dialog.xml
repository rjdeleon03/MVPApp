<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.Health.SpecialNeeds.Dialog.SpecialNeedsDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/nd_health_diseases_dlg_cancel"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{() -> viewModel.navigateOnCancelButtonPressed()}"
                    android:background="@drawable/round_button_cancel"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_card"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_reg"
                    android:text="@{viewModel.type.toString()}"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/nd_health_diseases_dlg_ok"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{() -> viewModel.navigateOnOkButtonPressed()}"
                    android:background="@drawable/round_button_ok"
                    android:src="@drawable/ic_check"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/nd_health_diseases_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"
                        android:layout_marginHorizontal="16dp">

                        <!-- Count -->
                        <TableRow
                            android:layout_margin="0dp"
                            android:layout_marginVertical="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/lato_reg"
                                android:text="Count"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="64dp"
                                android:layout_marginLeft="64dp"
                                android:ems="10"
                                android:fontFamily="@font/lato_reg"
                                android:gravity="right"
                                android:inputType="number"
                                android:text="@={viewModel.count}"
                                android:textSize="12sp" />

                        </TableRow>


                        <TableRow
                            android:layout_margin="0dp"
                            android:layout_marginVertical="2dp">

                            <LinearLayout
                                android:layout_span="2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/lato_reg"
                                    android:textColor="@android:color/black"
                                    android:text="Health / Medical Needs"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_reg"
                                    android:textSize="13dp"
                                    android:textStyle="italic"
                                    android:text="Indicate specific health or medical needs"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_reg"
                                    android:inputType="textMultiLine"
                                    android:textSize="12dp"
                                    android:text="@={viewModel.needs}"/>

                            </LinearLayout>

                        </TableRow>

                    </TableLayout>

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.Livelihoods.IncomeBefore.Dialog.IncomeBeforeDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/nd_lhood_dmg_dlg_cancel"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{() -> viewModel.navigateOnCancelButtonPressed()}"
                    android:background="@drawable/round_button_cancel"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_card"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_reg"
                    android:text="@{viewModel.type.toString()}"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/nd_lhood_dmg_dlg_ok"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{() -> viewModel.navigateOnOkButtonPressed()}"
                    android:background="@drawable/round_button_ok"
                    android:src="@drawable/ic_check"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/nd_lhood_dmg_dlg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp">

                    <!-- Source of Income -->
                    <TextView
                        android:id="@+id/nd_lhood_dmg_dlg_source_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Source of Income"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/nd_lhood_dmg_dlg_source"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:inputType="text"
                        android:text="@={viewModel.source}"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/nd_lhood_dmg_dlg_source_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_source_label" />

                    <!-- Number of Dependent Households -->
                    <TextView
                        android:id="@+id/nd_lhood_dmg_dlg_households_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Number of Dependent Households"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_source" />

                    <EditText
                        android:id="@+id/nd_lhood_dmg_dlg_households"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.depHousehold}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/nd_lhood_dmg_dlg_households_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_households_label" />

                    <!-- Men -->
                    <TextView
                        android:id="@+id/nd_lhood_dmg_dlg_male_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Male"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_lhood_dmg_dlg_male"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_households" />

                    <EditText
                        android:id="@+id/nd_lhood_dmg_dlg_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.depMale}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toStartOf="@+id/nd_lhood_dmg_dlg_female_label"
                        app:layout_constraintStart_toEndOf="@+id/nd_lhood_dmg_dlg_male_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_households" />

                    <!-- Women -->
                    <TextView
                        android:id="@+id/nd_lhood_dmg_dlg_female_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Female"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_lhood_dmg_dlg_female"
                        app:layout_constraintStart_toEndOf="@+id/nd_lhood_dmg_dlg_male"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_households" />

                    <EditText
                        android:id="@+id/nd_lhood_dmg_dlg_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.depFemale}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nd_lhood_dmg_dlg_female_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_households" />

                    <!-- Boys -->
                    <TextView
                        android:id="@+id/nd_lhood_dmg_dlg_boys_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Boys"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_lhood_dmg_dlg_male"
                        app:layout_constraintStart_toStartOf="@+id/nd_lhood_dmg_dlg_male_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_male" />

                    <EditText
                        android:id="@+id/nd_lhood_dmg_dlg_boys"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.depBoys}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="@+id/nd_lhood_dmg_dlg_male"
                        app:layout_constraintStart_toStartOf="@+id/nd_lhood_dmg_dlg_male"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_male" />

                    <!-- Girls -->
                    <TextView
                        android:id="@+id/nd_lhood_dmg_dlg_girls_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lato_reg"
                        android:text="Girls"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/nd_lhood_dmg_dlg_female"
                        app:layout_constraintStart_toStartOf="@+id/nd_lhood_dmg_dlg_female_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_female" />

                    <EditText
                        android:id="@+id/nd_lhood_dmg_dlg_girls"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.depGirls}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="@+id/nd_lhood_dmg_dlg_female"
                        app:layout_constraintStart_toStartOf="@+id/nd_lhood_dmg_dlg_female"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_female" />

                    <!-- Average Income per Household -->
                    <TextView
                        android:id="@+id/nd_lhood_dmg_dlg_income_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Average Monthly/Daily Income per Household"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_boys" />

                    <EditText
                        android:id="@+id/nd_lhood_dmg_dlg_income"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:ems="10"
                        android:fontFamily="@font/lato_reg"
                        android:text="@={viewModel.averageIncome}"
                        android:textSize="12sp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/nd_lhood_dmg_dlg_income_label"
                        app:layout_constraintTop_toBottomOf="@+id/nd_lhood_dmg_dlg_income_label" />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:elevation="10dp">

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
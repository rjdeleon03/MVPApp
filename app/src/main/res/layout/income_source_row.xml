<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.Livelihoods.IncomeBefore.Row.IncomeBeforeRowViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/nd_lhood_income_card"
        android:onClick="@{() -> viewModel.navigateOnCardSelected()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/nd_lhood_income_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:lines="2"
                    android:text="@{viewModel.type.toString()}"
                    android:textColor="@color/backgroundColor"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{() -> viewModel.navigateOnDeleteCardButtonPressed()}"
                    android:paddingHorizontal="8dp"
                    android:src="@drawable/ic_close_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/nd_lhood_income_dlg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="8dp">

                <!-- Source of Income -->
                <TextView
                    android:id="@+id/nd_lhood_income_dlg_source_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Source of Income"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nd_lhood_income_dlg_source"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:inputType="number"
                    android:text="@{viewModel.source}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/nd_lhood_income_dlg_source_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_source_label" />

                <!-- Number of Dependent Households -->
                <TextView
                    android:id="@+id/nd_lhood_income_dlg_households_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Number of Dependent Households"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_source" />

                <TextView
                    android:id="@+id/nd_lhood_income_dlg_households"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:inputType="number"
                    android:text="@{viewModel.depHousehold}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/nd_lhood_income_dlg_households_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_households_label" />

                <!-- Men -->
                <TextView
                    android:id="@+id/nd_lhood_income_dlg_male_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Male"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_lhood_income_dlg_male"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_households" />

                <TextView
                    android:id="@+id/nd_lhood_income_dlg_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:text="@{viewModel.depMale}"
                    android:inputType="number"
                    app:layout_constraintEnd_toStartOf="@+id/nd_lhood_income_dlg_female_label"
                    app:layout_constraintStart_toEndOf="@+id/nd_lhood_income_dlg_male_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_households" />

                <!-- Women -->
                <TextView
                    android:id="@+id/nd_lhood_income_dlg_female_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Female"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_lhood_income_dlg_female"
                    app:layout_constraintStart_toEndOf="@+id/nd_lhood_income_dlg_male"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_households" />

                <TextView
                    android:id="@+id/nd_lhood_income_dlg_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:text="@{viewModel.depFemale}"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nd_lhood_income_dlg_female_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_households" />

                <!-- Boys -->
                <TextView
                    android:id="@+id/nd_lhood_income_dlg_boys_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Boys"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_lhood_income_dlg_male"
                    app:layout_constraintStart_toStartOf="@+id/nd_lhood_income_dlg_male_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_male" />

                <TextView
                    android:id="@+id/nd_lhood_income_dlg_boys"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:inputType="number"
                    android:text="@{viewModel.depBoys}"
                    app:layout_constraintEnd_toEndOf="@+id/nd_lhood_income_dlg_male"
                    app:layout_constraintStart_toStartOf="@+id/nd_lhood_income_dlg_male"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_male" />

                <!-- Girls -->
                <TextView
                    android:id="@+id/nd_lhood_income_dlg_girls_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_reg"
                    android:text="Girls"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toStartOf="@+id/nd_lhood_income_dlg_female"
                    app:layout_constraintStart_toStartOf="@+id/nd_lhood_income_dlg_female_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_female" />

                <TextView
                    android:id="@+id/nd_lhood_income_dlg_girls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:inputType="number"
                    android:text="@{viewModel.depGirls}"
                    app:layout_constraintEnd_toEndOf="@+id/nd_lhood_income_dlg_female"
                    app:layout_constraintStart_toStartOf="@+id/nd_lhood_income_dlg_female"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_female" />

                <!-- Average Income per Household -->
                <TextView
                    android:id="@+id/nd_lhood_income_dlg_avg_income_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Average Monthly/Daily Income per Household"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_boys" />

                <TextView
                    android:id="@+id/nd_lhood_income_dlg_avg_income"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_reg"
                    android:inputType="number"
                    android:text="@{viewModel.averageIncome}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/nd_lhood_income_dlg_avg_income_label"
                    app:layout_constraintTop_toBottomOf="@+id/nd_lhood_income_dlg_avg_income_label" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
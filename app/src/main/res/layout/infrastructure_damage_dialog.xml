<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.GeneralInformation.InfrastructureDamage.Dialog.InfrastructureDamageDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="?dialogPreferredPadding"
                android:layout_marginStart="?dialogPreferredPadding"
                android:layout_marginRight="?dialogPreferredPadding"
                android:layout_marginEnd="?dialogPreferredPadding"
                android:stretchColumns="1">

                <!-- Number of Infrastructure -->
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Number of Infrastructure"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:ems="10"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@={viewModel.infraNumber}"
                        android:textSize="14sp" />

                </TableRow>

                <!-- Status -->
                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Still Functional?"
                        android:textColor="@android:color/black" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:checked="@={viewModel.status}"
                            android:textSize="14sp"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:text="No"
                            android:checked="@={!viewModel.status}" />
                        
                    </LinearLayout>
                </TableRow>

                <!-- Remarks -->
                <TableRow android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_span="2">

                        <TextView
                            android:id="@+id/nd_infrastructure_dlg_remarks_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            
                            android:text="Remarks"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_infrastructure_dlg_status" />

                        <TextView
                            android:id="@+id/nd_infrastructure_dlg_remarks_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            
                            android:text="(Specify if intermittent electricity, communications, etc.)"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_infrastructure_dlg_remarks_label" />

                        <EditText
                            android:id="@+id/nd_infrastructure_dlg_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:minLines="1"
                            android:singleLine="false"
                            android:text="@={viewModel.remarks}"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_infrastructure_dlg_remarks_hint" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</layout>
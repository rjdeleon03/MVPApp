<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.Livelihoods.LivelihoodsIncome.Dialog.LivelihoodsIncomeDialogViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        app:cardCornerRadius="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="?dialogPreferredPadding"
                android:layout_marginStart="?dialogPreferredPadding"
                android:layout_marginRight="?dialogPreferredPadding"
                android:layout_marginEnd="?dialogPreferredPadding"
                android:stretchColumns="1,3">

                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:orientation="vertical">

                        <!-- Source of Income -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="21dp"
                            android:text="Source of Income"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:text="@={viewModel.source}"
                            android:textSize="14sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:orientation="vertical">

                        <!-- Number of Dependent Households -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of Dependent Households"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="@={viewModel.depHousehold}"
                            android:textSize="14sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_marginTop="2dp">

                    <!-- Male -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:text="@={viewModel.depMale}"
                        android:textSize="14sp" />

                    <!-- Female -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:text="@={viewModel.depFemale}"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow
                    android:layout_marginTop="2dp">

                    <!-- Boys -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boys"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:text="@={viewModel.depBoys}"
                        android:textSize="14sp" />

                    <!-- Girls -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Girls"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:text="@={viewModel.depGirls}"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:orientation="vertical">

                        <!-- Average Monthly/Daily Income per Household -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Average Monthly/Daily Income per Household"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="@={viewModel.averageIncome}"
                            android:textSize="14sp" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</layout>
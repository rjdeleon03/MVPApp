<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.rjdeleon.mvp_app.Modules.NewDnca.GeneralInformation.PopulationData.Dialog.PopulationDataDialogViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary">

                    <ImageButton
                        android:id="@+id/nd_population_dlg_cancel"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/round_button_cancel"
                        android:onClick="@{() -> viewModel.navigateOnCancelButtonPressed()}"
                        android:padding="8dp"
                        android:src="@drawable/ic_close_card"
                        app:borderWidth="0dp"
                        app:fabSize="mini"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_reg"
                        android:text="@{viewModel.ageGroup.toString()}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/nd_population_dlg_ok"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/round_button_ok"
                        android:onClick="@{() -> viewModel.navigateOnOkButtonPressed()}"
                        android:src="@drawable/ic_check"
                        app:borderWidth="0dp"
                        app:fabSize="mini"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nd_population_dlg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:paddingTop="8dp">

                        <!-- Total -->
                        <TextView
                            android:id="@+id/nd_population_dlg_total_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/lato_reg"
                            android:text="Total"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/nd_population_dlg_chh_male_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_displaced_label"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:id="@+id/nd_population_dlg_chh_male"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.totalMale}"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_population_dlg_chh_female_ic"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_chh_male_ic"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/nd_population_dlg_chh_female_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_population_dlg_chh_female"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_chh_male"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:id="@+id/nd_population_dlg_chh_female"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.totalFemale}"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_chh_female_ic"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Affected -->
                        <TextView
                            android:id="@+id/nd_population_dlg_affected_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/lato_reg"
                            android:text="Affected"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_chh_male" />

                        <ImageView
                            android:id="@+id/nd_population_dlg_affected_male_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_displaced_label"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_chh_male"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:id="@+id/nd_population_dlg_affected_male"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.affectedMale}"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_population_dlg_affected_female_ic"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_affected_male_ic"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_chh_male" />

                        <ImageView
                            android:id="@+id/nd_population_dlg_affected_female_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_population_dlg_affected_female"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_affected_male"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_chh_female"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:id="@+id/nd_population_dlg_affected_female"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.affectedFemale}"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_affected_female_ic"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_chh_female" />

                        <!-- Displaced -->
                        <TextView
                            android:id="@+id/nd_population_dlg_displaced_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/lato_reg"
                            android:text="Displaced"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_affected_male" />

                        <ImageView
                            android:id="@+id/nd_population_dlg_displaced_male_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_displaced_label"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_affected_male"
                            app:srcCompat="@drawable/ic_male" />

                        <EditText
                            android:id="@+id/nd_population_dlg_displaced_male"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.displacedMale}"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_population_dlg_displaced_female_ic"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_displaced_male_ic"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_affected_male" />

                        <ImageView
                            android:id="@+id/nd_population_dlg_displaced_female_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_population_dlg_displaced_female"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_displaced_male"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_affected_female"
                            app:srcCompat="@drawable/ic_female" />

                        <EditText
                            android:id="@+id/nd_population_dlg_displaced_female"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.displacedFemale}"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nd_population_dlg_displaced_female_ic"
                            app:layout_constraintTop_toBottomOf="@+id/nd_population_dlg_affected_female" />

                    </android.support.constraint.ConstraintLayout>

                </ScrollView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>
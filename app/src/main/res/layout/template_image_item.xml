<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.cpu.quikdata.ModulesV2.NewForm.CaseStories.ImageItem.ImageItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:onLongClick="@{() -> viewModel.navigateOnDeleteButtonPressed()}"
            android:onClick="@{() -> viewModel.navigateOnItemPressed()}"
            app:imagePath="@{viewModel.imagePath}"/>

    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ModulesV2.NewForm.Base.TemplateMultiPageFragment">

    <data>
        <variable
            name="viewModel"
            type="com.cpu.quikdata.ModulesV2.NewForm.Base.TemplateMultiPageViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/nd_multi_page_stepper_container"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <com.rd.PageIndicatorView
                android:id="@+id/nd_multi_page_stepper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:piv_animationType="scale"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_selectedColor="@color/yellow"
                app:piv_unselectedColor="@color/lightYellow"
                app:piv_viewPager="@+id/nd_multi_page_pager"
                app:piv_padding="12dp"
                app:piv_radius="8dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nd_multi_page_stepper_container">

            <android.support.v4.view.ViewPager
                android:id="@+id/nd_multi_page_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.design.widget.CoordinatorLayout>

    </android.support.constraint.ConstraintLayout>

</layout>
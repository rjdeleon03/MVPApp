<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             tools:context=".ModulesV2.Base.MainTemplate.TemplateQuestionFragment">

    <data>
        <variable
            name="viewModel"
            type="com.cpu.quikdata.ModulesV2.Base.MainTemplate.TemplateQuestionViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/template_question_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            app:adapter="@{viewModel.adapter}"
            app:data="@{viewModel.questions}">

        </android.support.v7.widget.RecyclerView>

    </FrameLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.cpu.quikdata.Modules.NewDnca.GeneralInformation.VulnerablePopulation.Row.VulnerablePopulationRowViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/nd_vulnerable_card"
        android:onClick="@{() -> viewModel.navigateOnCardSelected()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="6dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/nd_vulnerable_age_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:lines="2"
                    android:maxWidth="53dp"
                    android:text="@{viewModel.type.toString()}"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/nd_vulnerable_delete_button"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{() -> viewModel.navigateOnDeleteCardButtonPressed()}"
                    android:paddingHorizontal="8dp"
                    android:src="@drawable/ic_close_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_age_group" />

            </android.support.constraint.ConstraintLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nd_vulnerable_dlg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="8dp">

                        <!-- Indigenous People -->
                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_indigenous_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:width="95dp"
                            android:fontFamily="@font/lato_reg"
                            android:lines="2"
                            android:maxWidth="95dp"
                            android:text="Indigenous People"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_chh_male" />

                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_indigenous_male"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.indigenousMale}"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_vulnerable_dlg_indigenous_female"
                            app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_indigenous_label"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_chh_male" />

                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_indigenous_female"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.indigenousFemale}"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_indigenous_male"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_chh_female" />

                        <!-- Persons with Disabilities -->
                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_disabled_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:width="95dp"
                            android:fontFamily="@font/lato_reg"
                            android:lines="2"
                            android:maxWidth="95dp"
                            android:text="Persons with Disabilities"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_indigenous_male" />

                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_disabled_male"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.disabledMale}"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_vulnerable_dlg_disabled_female"
                            app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_disabled_label"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_indigenous_male" />

                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_disabled_female"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.disabledFemale}"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_disabled_male"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_indigenous_female" />

                        <!-- Child-Headed Households -->

                        <ImageView
                            android:id="@+id/nd_vulnerable_dlg_chh_male_ic"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toEndOf="@+id/nd_vulnerable_dlg_chh_male"
                            app:layout_constraintStart_toStartOf="@+id/nd_vulnerable_dlg_chh_male"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_misc_fields"
                            app:srcCompat="@drawable/ic_male" />

                        <ImageView
                            android:id="@+id/nd_vulnerable_dlg_chh_female_ic"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toEndOf="@+id/nd_vulnerable_dlg_chh_female"
                            app:layout_constraintStart_toStartOf="@+id/nd_vulnerable_dlg_chh_female"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_misc_fields"
                            app:srcCompat="@drawable/ic_female" />

                        <View
                            android:id="@+id/nd_vulnerable_dlg_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_chh_male_ic" />

                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_child_headed_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:width="95dp"
                            android:fontFamily="@font/lato_reg"
                            android:lines="2"
                            android:maxWidth="95dp"
                            android:text="Child-Headed Households"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_divider" />

                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_chh_male"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.childHeadedMale}"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@+id/nd_vulnerable_dlg_chh_female"
                            app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_child_headed_label"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_divider" />

                        <TextView
                            android:id="@+id/nd_vulnerable_dlg_chh_female"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="12dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="number"
                            android:text="@={viewModel.childHeadedFemale}"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_chh_male"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_divider" />

                        <!-- Remarks -->
                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/nd_vulnerable_remarks_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.shouldShowRemarks ? View.VISIBLE : View.GONE}"
                            app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_disabled_label" >

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_remarks_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/lato_reg"
                                android:text="Remarks"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_remarks"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:ems="10"
                                android:inputType="textMultiLine"
                                android:minLines="1"
                                android:singleLine="false"
                                android:text="@={viewModel.remarks}"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_remarks_label"/>

                        </android.support.constraint.ConstraintLayout>

                        <!-- Other Fields -->
                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/nd_vulnerable_misc_fields"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:visibility="@{viewModel.shouldShowOtherFields ? View.VISIBLE : View.GONE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_lactating_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:text="Lactating Mothers"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_pregnant" />

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_lgbt_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/lato_reg"
                                android:text="LGBT"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_lactating" />

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_pregnant_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="0dp"
                                android:text="Pregnant Women"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_pregnant"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="0dp"
                                android:ems="10"
                                android:gravity="right"
                                android:inputType="number"
                                android:text="@={viewModel.pregnant}"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_lactating_label"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_lactating"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:ems="10"
                                android:gravity="right"
                                android:inputType="number"
                                android:text="@={viewModel.lactating}"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_lactating_label"
                                app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_pregnant" />

                            <TextView
                                android:id="@+id/nd_vulnerable_dlg_lgbt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:ems="10"
                                android:gravity="right"
                                android:inputType="number"
                                android:text="@={viewModel.lgbt}"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/nd_vulnerable_dlg_lactating_label"
                                app:layout_constraintTop_toBottomOf="@+id/nd_vulnerable_dlg_lactating" />

                        </android.support.constraint.ConstraintLayout>

                    </android.support.constraint.ConstraintLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>